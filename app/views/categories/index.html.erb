<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.pinimg.com/originals/1f/2e/d7/1f2ed796410477e1a734a08a516a7c9e.jpg);">
  <div class="container">
    <h1><strong>Cook Book</strong></h1>
    <p>Save your favourite Recipe's</p>
  </div>
</div>
<div>

<div class="container">
  <div class="d-flex justify-content-between align-items-center my-2">
    <h1>List of Categories</h1>
    <%= link_to "New Category", new_category_path, class: "btn btn-primary button-font-white" %>
  </div>
  <div class="category_container">
    <ul>
      <% @categories.each do |category| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://img.delicious.com.au/bQjDG77i/del/2021/07/spiced-peanut-butter-and-honey-pancakes-with-blackberry-cream-155151-2.jpg)">
          <li>
            <%=link_to category.name, category_path(category) %><%=link_to "delete", category_path(category), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete?"}%>
          </li>
        </div>
      <% end %>
    </ul>
  </div>
</div>

